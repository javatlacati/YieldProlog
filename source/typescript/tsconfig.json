{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitReturns": true,
    "target": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./lib/esm",
    "lib": [
      "decorators",
      "dom",
      "es5",
      "scripthost",
      "es2015.iterable"
    ],
    "rootDir": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}